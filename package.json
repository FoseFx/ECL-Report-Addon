{
  "name": "ecl-report",
  "version": "1.0.0",
  "description": "An addon that makes reporting players in ECL (ecl.gg) easier",
  "main": "index.js",
  "scripts": {
    "build:prod": "./build.sh prod",
    "build:dev": "./build.sh dev",
    "test:cs": "jest --coverage",
    "test": "npm run test:cs && cd form && npm run test:unit && cd ..",
    "lint": "tslint -c tslint.json content_scripts/*.ts",
    "lint:fix": "tslint -c tslint.json content_scripts/*.ts --fix"
  },
  "keywords": [],
  "author": "FoseFx <info@fosefx.com>",
  "license": "Other",
  "devDependencies": {
    "@types/jest": "^24.0.18",
    "husky": "^3.0.4",
    "jest": "^24.9.0",
    "ts-jest": "^24.0.2",
    "tslint": "^5.18.0",
    "typescript": "3.5.3",
    "webextension-polyfill": "^0.4.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm test",
      "pre-push": "npm run lint && npm test && npm run build:prod"
    }
  }
}
